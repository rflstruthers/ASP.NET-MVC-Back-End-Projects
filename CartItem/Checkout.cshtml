
@model IEnumerable<ManagementPortal.Models.CartItem>

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<div class="card mx-2 px-3 py-1">
    @if (Model.Count() == 0)
    {
        <h1>Please add products to your cart.</h1>
    }

    @{
        decimal? total = decimal.Zero;
        total = Model.Sum(item => item.Product.UnitPrice * item.Quantity);
        int totalQuantity = Model.Sum(item => item.Quantity);
    }
    Your total for @totalQuantity item(s) is: $@total

    Please contact your Manager for payment information...

    <div>
        @Html.ActionLink("Cancel", "Index", "Product")
    </div>
</div>